<%= form_for(@calculation, url: "/step1", method: 'post', remote: true) do |f| %>
  <div class="modal-body">
    <div class="form-group">
      <%= f.label :name, :class => "control-label" %>
      <%= f.text_field :name, :class => "form-control", :value => @calculation.name %>
    </div>
    <div class="form-group">
      <%= f.label :email, :class => "control-label" %>
      <%= f.email_field :email, :class => "form-control", :value => @calculation.email %>
    </div>
    <div class="form-group">
      <%= f.label :'phone_number_(optional)', :class => "control-label" %>
      <%= f.text_field :phone_number, :class => "form-control", :value => @calculation.phone_number %>
    </div>
    <div class="form-group">
      <%= f.label :post_code, :class => "control-label" %>
      <%= f.text_field :post_code, :class => "form-control", :value => @calculation.post_code %>
    </div>
  </div>
  <div class="modal-footer">
    <%= f.submit "Start saving", :class =>"btn btn-primary" %>
  </div>
<% end %>
