<h1>Listando Autores</h1>

<table class="table">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Nickname</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @authors.each do |author| %>
      <tr>
        <td><%= link_to author.name + " " + author.surname, author %></td>
        <td><%= author.nickname %></td>
        <td><%= author.email %></td>
        <td><%= link_to '<div class="btn btn-primary">Editar</div>'.html_safe, edit_author_path(author) %></td>
        <td><%= link_to '<div class="btn btn-danger">Eliminar</div>'.html_safe, author, method: :delete, data: { confirm: '¿Estás seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<br>
<%= pagination_links(Author, "/authors/page/") %>
<br> <br>
<div class="btn-group" role="group">
  <a href="<%= new_author_path %>" class="btn btn-primary">Nuevo Autor</a>
  <a href="/" class="btn btn-primary">Atrás</a>
</div>
