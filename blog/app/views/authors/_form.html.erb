<%= form_for(@author) do |f| %>
  <% if @author.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <h2>No se pudo crear el autor</h2>
      <ul>
      <% @author.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :nombre, :class => "control-label" %>
    <%= f.text_field :name, :placeholder => "Nombre" ,:class => "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :apellidos, :class => "control-label" %>
    <%= f.text_field :surname, :placeholder => "Apellidos" ,:class => "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :nombre_de_usuario, :class => "control-label" %>
    <%= f.text_field :nickname, :placeholder => "Nombre de usuario" ,:class => "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :email, :class => "control-label" %>
    <%= f.text_field :email, :placeholder => "Dirección de email", :class => "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :contraseña, :class => "control-label" %>
    <%= f.password_field :password, :placeholder => "Contraseña" ,:class => "form-control" %>
  </div>
  <% if @user.role == "admin" %>
    <div class="form-group">
      <%= f.label :rol, :class => "control-label" %>
      <%= f.select :role, options_for_select({"Administrador" => "admin", "Usuario" => "user"}),{}, :class => "form-control" %>
    </div>
  <% end %>
  <br>
  <div class="actions">
    <% if @author.id.nil? %>
      <%= f.submit "Crear Autor", :class => "btn btn-primary" %>
    <% else %>
      <%= f.submit "Actualizar Autor", :class => "btn btn-primary" %>
    <% end %>
  </div>
<% end %>
