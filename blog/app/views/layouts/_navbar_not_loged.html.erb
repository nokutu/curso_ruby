    <a class="dropdown-toggle" href="#" data-toggle="dropdown" id="navLogin">Login</a>
    <ul class="dropdown-menu" role="menu" style="padding:17px;">
      <%= form_tag('/login', :method=>'home') do %>
        <div class="form-group">
          <input class="form-control" name="[login][username]" placeholder="Usuario" type="text">
        </div>
        <div class="form-group">
          <input class="form-control" name="[login][password]" id="password" placeholder="Contraseña" type="password">
          <input type="checkbox" name="[login][remember]"> Recordarme
        </div>
