<ul class="nav navbar-nav navbar-right">
  <li class="dropdown" id="menuLogin">
    <a class="dropdown-toggle" href="#" data-toggle="dropdown" id="navLogin">Registrarse</a>
    <ul class="dropdown-menu" role="menu" style="padding:17px;">
      <%= form_tag('/register', :method=>'home') do %>
        <div class="form-group">
          <input class="form-control" name="[author][name]" placeholder="Nombre" type="text">
        </div>
        <div class="form-group">
          <input class="form-control" name="[author][surname]" placeholder="Apellidos" type="text">
        </div>
        <div class="form-group">
          <input class="form-control" name="[author][email]" placeholder="Email" type="text">
        </div>
        <div class="form-group">
          <input class="form-control" name="[author][nickname]" placeholder="Usuario" type="text">
        </div>
        <div class="form-group">
          <input class="form-control" name="[author][password]" id="password" placeholder="Contraseña" type="password">
        </div>
