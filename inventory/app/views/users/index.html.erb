<h1>
  <%= t("listingUsers") %>
</h1>

<table class="table">
  <thead>
    <tr>
      <th><%= User.human_attribute_name("username") %></th>
      <th><%= User.human_attribute_name("fullname") %></th>
      <th><%= User.human_attribute_name("email") %></th>
      <th><%= User.human_attribute_name("role") %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.username, "/users/#{user.id}" %></td>
        <td><%= user.fullname %></td>
        <td><%= user.email %></td>
        <td><%= user.role %></td>
        <td>
          <%= link_to "<div class=\"btn btn-primary\">#{t("editButton")}</div>".html_safe, "/users/#{user.id}/edit" %>
        </td>
        <td>
          <%= link_to "<div class=\"btn btn-danger\">#{t("delete")}</div>".html_safe, "/users/#{user.id}", method: :delete, data: { confirm: '¿Estás seguro?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


<br>
<%= paginate @users, :theme => 'twitter-bootstrap-3' %>
<br> <br>
<div class="btn-group" role="group">
  <a href="<%= "/users/new" %>" class="btn btn-primary">
    <%= t("new", obj: User.model_name.human.downcase) %>
  </a>
  <a href="/" class="btn btn-primary">
    <%= t("back") %>
  </a>
</div>
